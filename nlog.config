<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	  autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Warn"
      internalLogFile="internal-nlog.txt">


  <targets>
    <!-- Logging the operation of the programme -->
    <target xsi:type="File" name="logfile" fileName="logs/logfile.log"
            archiveFileName="logs/archives/logfile.{#}.log"
            archiveEvery="Month"
            archiveNumbering="Rolling"
            maxArchiveFiles="12"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}" />
	  <!-- User activity log -->
	  <target xsi:type="File" name="useractivity" fileName="logs/useractivity.log"
			  archiveFileName="logs/archives/useractivity.{#}.log"
			  archiveEvery="Month"
			  archiveNumbering="Rolling"
			  maxArchiveFiles="12"
			  layout="${longdate}|${logger}|${message}" />

  </targets>

  <rules>
    <!-- Log everything from Info level and above -->
    <logger name="*" minlevel="Info" writeTo="logfile" />
	  <!-- User activity log rule -->
	  <logger name="ActivityLogger" minlevel="Info" writeTo="useractivity" />
	
  </rules>
</nlog>
